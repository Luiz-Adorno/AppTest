<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/logoTopLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="117dp">

        <include layout="@layout/snippet_top_backarrow" />
    </RelativeLayout>

    <ScrollView
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logoTopLogin">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <RelativeLayout
                android:id="@+id/textRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/Almost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:text="@string/almost"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Almost"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:text="@string/almost_append"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </RelativeLayout>

            <!-- middle Login -->
            <RelativeLayout
                android:id="@+id/middleLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textRegister">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/registerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp">

                    <EditText
                        android:id="@+id/name_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:hint="@string/username"
                        android:inputType="textPersonName|textCapWords" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/registerName"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp">

                    <miips.com.Utils.PhoneEditText
                        android:id="@+id/phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:hint="@string/phone"
                        android:inputType="phone" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/regsisterMiipsName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phoneNumber"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/miipsname"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:id="@+id/info_miipsname"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/miipsname"
                        android:src="@drawable/ic_info"
                        app:layout_constraintBottom_toTopOf="@+id/miips_id"
                        app:layout_constraintStart_toEndOf="@+id/textView2" />

                    <com.bachors.prefixinput.EditText
                        android:id="@+id/miips_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:inputType="text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ProgressBar
                    android:id="@+id/RegisterProgressBarGoogle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_above="@id/city_state"
                    android:layout_centerInParent="true"
                    android:indeterminateDrawable="@drawable/background" />

                <RelativeLayout
                    android:padding="10dp"
                    android:id="@+id/city_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/regsisterMiipsName">

                    <include layout="@layout/snipped_location_register" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/city_state"
                    android:paddingTop="5dp">

                    <include layout="@layout/snipped_date_gender_user" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/terms_condi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dateLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/terms_condicion"
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/terms_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/terms_condi"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-1dp"
                    android:text="@string/terms_cliclk"
                    android:textAlignment="center"
                    android:textColor="@color/link_blue"
                    android:textSize="15sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/terms_click"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_rounded_button"
                    android:text="@string/Register" />

            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>