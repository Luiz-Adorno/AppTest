<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relLayoutEditProfile1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <include layout="@layout/snippet_top_backarrow" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relLayoutEditProfile1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="20dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ic_profile"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_centerHorizontal="true"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp" />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/ic_profile"
                android:id="@+id/miips_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/miips_id"
                android:id="@+id/edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_profile"
                android:textColor="@color/link_blue"
                android:textSize="20sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/edit_profile"
                android:layout_marginTop="10dp"
                android:background="@drawable/top_white_grey_border"
                android:id="@+id/relLayout1">

                <ImageView
                    android:layout_width="25dp"
                    android:id="@+id/profile_image"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_name"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/username"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/profile_image"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:text=""/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relLayout1"
                android:layout_marginTop="5dp"
                android:background="@drawable/top_white_grey_border"
                android:id="@+id/relLayout3">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_email"
                    android:layout_centerVertical="true"
                    android:id="@+id/message_image"/>

                <TextView
                    android:layout_marginStart="5dp"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/message_image"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/black"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relLayout3"
                android:layout_marginTop="5dp"
                android:background="@drawable/top_white_grey_border"
                android:id="@+id/relLayout4">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_cake"
                    android:layout_centerVertical="true"
                    android:id="@+id/cake_image"/>

                <TextView
                    android:layout_marginStart="5dp"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateBirth"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/cake_image"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/black"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relLayout4"
                android:layout_marginTop="5dp"
                android:background="@drawable/top_white_grey_border"
                android:id="@+id/relLayout5">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_profile"
                    android:layout_centerVertical="true"
                    android:id="@+id/gender_image"/>

                <TextView
                    android:layout_marginStart="5dp"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gender"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/gender_image"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/black"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relLayout5"
                android:layout_marginTop="5dp"
                android:background="@drawable/top_white_grey_border"
                android:id="@+id/relLayout6">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_location_city_gray"
                    android:layout_centerVertical="true"
                    android:id="@+id/city_image"/>

                <TextView
                    android:layout_marginStart="5dp"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/city"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@id/city_image"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relLayout6"
                android:layout_marginTop="5dp"
                android:background="@drawable/top_white_grey_border"
                android:id="@+id/relLayout7">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_location_state_gray"
                    android:layout_centerVertical="true"
                    android:id="@+id/state_image"/>

                <TextView
                    android:layout_marginStart="5dp"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/state"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@id/state_image"/>
            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progressBar_cyclic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>


    </ScrollView>
</RelativeLayout>